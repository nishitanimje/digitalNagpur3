<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1D1D1"
    tools:context=".shopping">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#DCD7DC">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="backarrow"
                android:padding="15dp"
                android:src="@drawable/arrow_back" />



        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="10dp"
            android:textColor="#070707"
            android:text="Shopping Malls"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <TextView
                android:id="@+id/xavi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Big Bazaar"
                android:textColor="#070707"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xavi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xavi"
                android:fontFamily="serif"
                android:textColor="#070707"
                android:text="Ramdaspeth Nagpur"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/but1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xavi2"
                android:textSize="15sp"
                android:onClick="hs1"
                android:textColor="#070707"
                android:background="@drawable/transparentbutton"
                android:text="@string/more_info" />

            <TextView
                android:id="@+id/e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/but1"
                android:textSize="15sp"
                android:onClick="d1"
                android:textColor="#070707"
                android:background="@drawable/transparentbutton"
                android:text="@string/for_directions_click_here" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/bigbazar"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <TextView
                android:id="@+id/bi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Eternity mall "
                android:textSize="20sp"
                android:textColor="#070707"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi1"
                android:fontFamily="serif"
                android:textColor="#070707"
                android:text="Variety Square"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi2"
                android:fontFamily="serif"
                android:text="Sitabuldi  Nagpur"
                android:textColor="#070707"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/butt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi3"
                android:textSize="15sp"
                android:onClick="cs1"
                android:textColor="#070707"
                android:background="@drawable/transparentbutton"
                android:text="@string/more_info1" />
            <TextView
                android:id="@+id/e2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/butt1"
                android:textSize="15sp"
                android:onClick="d2"
                android:textColor="#070707"
                android:background="@drawable/transparentbutton"
                android:text="@string/for_directions_click_here" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/eternity"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <TextView
                android:id="@+id/bi5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Fortune Mall"
                android:textColor="#070707"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bi6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi5"
                android:fontFamily="serif"
                android:textColor="#070707"
                android:text=" New Jhansi Rani Square "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bi7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi6"
                android:fontFamily="serif"
                android:textColor="#070707"
                android:text="Buty Marg Sitaburdi"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/butt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi7"
                android:textSize="15sp"
                android:onClick="gi1"
                android:textColor="#070707"
                android:background="@drawable/transparentbutton"
                android:text="@string/more_info3" />

            <TextView
                android:id="@+id/e3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/butt2"
                android:textSize="15sp"
                android:onClick="d3"
                android:textColor="#070707"
                android:background="@drawable/transparentbutton"
                android:text="@string/for_directions_click_here" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/fortune"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <TextView
                android:id="@+id/bi8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Empress Mall"
                android:textColor="#070707"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bi9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi8"
                android:fontFamily="serif"
                android:textColor="#070707"
                android:text=" Cotton Market "
                android:textSize="15sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/butt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi9"
                android:textSize="15sp"
                android:onClick="emp"
                android:textColor="#070707"
                android:background="@drawable/transparentbutton"
                android:text="@string/more_info3" />

            <TextView
                android:id="@+id/but11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/butt3"
                android:textSize="15sp"
                android:onClick="d4"
                android:textColor="#070707"
                android:background="@drawable/transparentbutton"
                android:text="@string/for_directions_click_here" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/empress"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>