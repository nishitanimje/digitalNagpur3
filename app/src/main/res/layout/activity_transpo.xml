<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1D1D1"
    tools:context=".transpo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#DCD7DC">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="backarr"
            android:padding="15dp"
            android:src="@drawable/arrow_back"
             />




    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="10dp"
            android:textColor="#070707"
            android:text="Transportation"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:onClick="metro">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metro"
                android:textColor="#070707"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:paddingRight="30dp" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/metro" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:onClick="train">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train"
                android:textColor="#070707"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:paddingRight="30dp" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/train" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:onClick="airport">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airport"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="#070707"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:paddingRight="30dp" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/airport"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:onClick="cab">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Cab"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingEnd="30dp"
                android:textStyle="bold"
                android:textColor="#070707"
                android:paddingStart="10dp"
                android:paddingRight="30dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/taxi" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>